<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="title">
    <h1><%= @user.name %>のリスト</h1>
  </div>
  <table class="table table-striped">
      <thead>
          <tr>
            <th>リスト名</th>
            <th>コンテンツ</th>
            <th></th>
            <th></th>
          </tr>
      </thead>
      <tbody>
        <% @lists.each do |list| %>
          <tr>
            <td><%= link_to list.title, list %></td>
            <td><%= list.content %></td>
            <% if current_user == list.user %>
              <td><%= link_to '編集', edit_list_path(list) %></td>
              <td><%= link_to '削除', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>