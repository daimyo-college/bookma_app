<div class="col-8 ml-auto mr-auto">
  <h1 class="text-center my-5">本詳細ページ</h1>
  <div class="row">
    <div class="book col-4">
      <div class="book-picture">
        <%= link_to image_tag(@book.imageurl), list_book_path(@list,@book) %>
      </div>
    </div>
    <div class="col-7">
      <p>タイトル：<%= @book.title %></p>
      <p>著者：<%= @book.author %></p>
      <p>説明：</P>
      <p><%= @book.caption %></p>
    </div>
  </div>
  
  <hr class="featurette-divider mx-5">
  <div class="bg-light py-4 my-4 col-8 ml-auto mr-auto">
    <p>ユーザー名：<%= @user.name %></p>
    <p>リストタイトル：<%= @list.title %></p>
    <p>コメント：<%= @book.comment %></p>
  </div>
  <div class="text-right mb-5">
    <%= link_to "リストページに戻る", list_path(@list) %>
  </div>
</div>
