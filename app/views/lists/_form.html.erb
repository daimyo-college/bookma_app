<div class="form-body form-body col-md-6 ml-auto mr-auto">
  <%= form_with(model: list, local: true) do |form| %>
    <% if list.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

        <ul>
        <% list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= form.text_field :title, class: "form-control", placeholder: "リストタイトルを入力してください" %>
    </div>

    <div class="form-group row">
      <%= form.text_area :content, class: "form-control", placeholder: "リストに関する情報を入力してください" %>
    </div>

    <div class="form-group row">
      <%= form.submit "リスト登録", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <div class="text-right mt-5">
    <%= link_to "#{@list.title}のbook一覧ページ", @list %> |
    <%= link_to 'マイリスト', "/users/#{@list.user.id}/lists" %>
  </div>
</div>

